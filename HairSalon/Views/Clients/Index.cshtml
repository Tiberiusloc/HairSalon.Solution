@{
	Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h2>Stylists at this Salon:</h2>

@if (Model.Count == 0)
{
	<h4>There are no Stylists currently avaiable here :(</h4>
}

<ul>
@foreach (Stylist stylist in Model)
{
	<li>@Html.ActionLink($"{stylist.Name}", "Details", new {id = stylist.StylistId})</li>
}
</ul>

<p>@Html.ActionLink("Add New Stylist", "Create")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>
<p>@Html.ActionLink("See all Clients", "Index", "Clients")</p>