@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h3> Clients under searched Stylist: </h3>

@if (Model.Count == 0)
{
  <h3>No Clients here, Sorry.</h3>
}

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", "clients", new {id = client.ClientId})</li>
}

<p>@Html.ActionLink("Return Home", "Index", "Home")</p>