@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@model dynamic;

    <h3>@Model.Name</h3>
  <p>About @Model.Name: @Model.Description</p>
  <h3>Clients:</h3>
  @if(Model.Client.Count == 0)
  {
    <p>No clients have been added for this stylist</p>
    <p>Please add a new client</p>
  }
  <ul>
    @foreach(Client client in Model.Client) 
    {
      <li>@Html.ActionLink($"{client.Name}", "Details", "Clients", new{id = client.ClientId}) | @client.StylistId </li>
    }
  </ul>
  
  <p>@Html.ActionLink("Add a Client", "Create", "Clients") </p>
  <p>@Html.ActionLink("Go Back", "Index") </p>
</div>