@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

  <h3>Stylists</h3>

  <h2>Current Hair Stylists:</h2>
  <p>Click on a stylist name to see thier details and list of their clients</p>

  @if(Model.Count == 0)
  {
    <p>No stylists available here, Please add a Stylist</p>
  }
  else 
  {
    <ul>
      @foreach(Stylist stylist in Model)
      {
        <li>@Html.ActionLink($"{stylist.Name}", "Details", new {id = stylist.StylistId})</li>
      }
    </ul>
  }
  <p>@Html.ActionLink("Add a Stylist", "Create")</p>
  @if(Model.Count != 0)
  {
    <p>@Html.ActionLink("View all Clients", "Index", "Clients")</p>
  }
  <p>@Html.ActionLink("Return Home", "Index", "Home")</p>